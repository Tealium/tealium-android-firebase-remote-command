<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_launch_user_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_launch_user_details"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_events_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_launch_user_details"
        android:textSize="26sp"
        android:text="@string/txt_events_title"/>

    <Button
        android:id="@+id/btn_launch_ecommerce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_launch_ecommerce"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_events_title" />

    <Button
        android:id="@+id/btn_launch_gaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_launch_gaming"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_launch_ecommerce" />

    <Button
        android:id="@+id/btn_launch_travel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_launch_travel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_launch_gaming" />

    <Button
        android:id="@+id/btn_reset_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_reset_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>